{
  "name": "shelfwise",
  "version": "1.0.0",
  "description": "A Personal Library Management and Book Discovery Application",
  "main": "server/index.js",
  "type": "module",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "node server/index.js",
    "client": "cd client && npm run dev",
    "db:setup": "node server/db/setup.js",
    "db:migrate": "node server/db/migrate.js",
    "db:migrate-auth": "node server/db/migrate-auth.js",
    "db:migrate-completed": "node server/db/migrate-completed-books.js",
    "build": "cd client && npm run build",
    "start": "NODE_ENV=production node server/index.js"
  },
  "keywords": [
    "books",
    "library",
    "isbn",
    "reading"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "better-sqlite3": "^11.7.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "helmet": "^8.0.0",
    "uuid": "^11.0.4"
  },
  "devDependencies": {
    "concurrently": "^9.1.2"
  }
}
